<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edit_description"
        android:padding="10dp"
        android:text="@string/edit_title" />

    <EditText
        android:id="@+id/edit_title_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_description_field"
        android:layout_alignParentRight="true"
        android:inputType="text"
        android:padding="10dp" />

    <TextView
        android:id="@+id/edit_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/edit_title"
        android:padding="10dp"
        android:text="@string/edit_description" />

    <EditText
        android:id="@+id/edit_description_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edit_title"
        android:layout_toRightOf="@id/edit_description"
        android:inputType="textMultiLine"
        android:lines="5"
        android:padding="10dp" />

</RelativeLayout>
