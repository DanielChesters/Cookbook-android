<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/view_title_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/view_title_field"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/view_description_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_title_card"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/view_description_field"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/description_height"
            android:gravity="center_vertical"
            android:lines="5"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
