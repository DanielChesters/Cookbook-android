<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_alignEnd="@+id/view_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/view_description"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/edit_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/view_title_field"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_alignLeft="@+id/view_description_field"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/view_description_field"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/view_description"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/description_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/view_title"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/edit_description"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/view_description_field"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/description_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_title"
        android:layout_toEndOf="@id/view_description"
        android:layout_toRightOf="@id/view_description"
        android:gravity="center_vertical"
        android:lines="5"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>
